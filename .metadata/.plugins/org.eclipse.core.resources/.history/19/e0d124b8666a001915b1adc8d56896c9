package b_operator;

/*
 *  증가감소 연산자 : ++, --
 */

public class Ex01_IncDec {
	public static void main(String[] args) {
		
		int a=5, b=7;
		System.out.println( "A="+(a+1)+"B="+(b+1) ); 
		
		/*
		a = a+1;
		b = b-1;
		System.out.println( "A="+ a + "B="+ b  );
		
		a = a++;
		b = b--;
		System.out.println( "A="+ a + "B="+ b  );
		
		++a;
		--b;
		System.out.println( "A="+ a + "B="+ b  );
		*/
		
//		int result = ++a;
//		System.out.println( "Result : " + result + ", A=" + a );
//		
//		int result2 = a++;
//		System.out.println( "Result : " + result2 + ", A=" + a );
		
		System.out.println( "A="+ ++a + "B="+ --b  );  	//
		System.out.println( "A="+ a++ + "B="+ b--  );  	//
		System.out.println( "A="+ a + "B="+ b  );       		//
	}
}
